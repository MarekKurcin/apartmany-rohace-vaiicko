# Bezpecnostne nastavenia pre upload priecinok
# Zakazat spustanie PHP suborov
php_flag engine off

# Povolit len obrazky
<FilesMatch "\.(?i:jpg|jpeg|png|gif|webp)$">
    Order Allow,Deny
    Allow from all
</FilesMatch>

# Zakazat vsetko ostatne
<FilesMatch "\.(?i:php|php3|php4|php5|phtml|pl|py|jsp|asp|htm|html|shtml|sh|cgi)$">
    Order Deny,Allow
    Deny from all
</FilesMatch>
